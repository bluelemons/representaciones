= javascript_include_tag('autocompletePersona')
.ui-widget.ui-widget-content
  = semantic_form_for @reserva,:remote=>true do |form|
    =form.inputs do
      %br
      %br
      = error_message(@reserva)
      %table.wide
        %tr
          %td= form.input :referencia, :input_html => {:rows => 3}
          %td= form.input :salida, :as=>:string,:input_html => {:class => 'datepicker',:size=>10}
        %tr
          %td= form.input :agency,:collection => Agency.all
          %td= form.input :reservado,:input_html => {:size=>25}

        %tr
          %td= form.input :operadora,:collection => Operadora.all
          %td= form.input :operado,:input_html => {:size=>25}

        %tr
          %td= form.input :programa
          %table
            %tr
              %td= form.input :thabitacion
              %td= form.input :habitaciones,:input_html => {:size=>3}
        %tr
          %td= form.input :regimen
          %td= form.input :periodo,:input_html => {:size=>10}
      = form.input :hotel
      = render :partial => "tarifa",:locals=>{:form=>form}
      = form.input :obs
      = render "operations_history"
      = render :partial => "pasajeros"

      = form.buttons

  %h3.ui-widget-header Alta de Pasajero
  #pasajero_form

    =render :partial=>'pasajeros/form'

