=will_paginate @entidads
#entidads_grid
  %table#migrilla.togrid
    %tr
      %th ID
      %th Name
      %th Direccion
      %th CUIT
      %th Telefono
      %th Acciones


    - for entidad in @entidads
      %tr
        %td= entidad.id
        %td= entidad.try(:name)
        %td
          = entidad.try(:calle)
        %td= entidad.try(:cuit)
        %td= entidad.try(:telefono)

        %td
          = link_to 'Show', {:controller=>"entidads",:action=>:show,:id=>entidad.id},:remote=>true
          -if can? :edit, entidad
            = link_to 'Edit', {:controller=>"entidads",:action=>:edit,:id=>entidad.id},:remote=>true
          -if entidad.can_be_deleted?
            = link_to 'Destroy',{:controller=>"entidads",:action=>:destroy,:id=>entidad.id}, :confirm => 'Are you sure?', :method => :delete, :remote=>true

.action_bar
  =link_to "imprimir",{:search=>params[:search],:format=>'pdf'}

